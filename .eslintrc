{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],
	"settings": {
		"import/resolver": {
			"babel-module": {}
		}
	},
  "rules": {
    "quotes": ["error", "double", {
      "avoidEscape": true
    }],
    "keyword-spacing": ["error", {
      "overrides": {
        "if": { "after": false },
        "for": { "after": false },
        "while": { "after": false },
        "catch": { "after": false },
        "switch": { "after": false }
      }
    }],
    "generator-star-spacing": ["error", {
      "before": true,
      "after": true
    }],
    "no-plusplus": ["error", {
      "allowForLoopAfterthoughts": true
    }],
    "comma-dangle": ["error", "never"],
    "array-bracket-spacing": ["error", "always"],
    "semi": ["error", "never"],
    "global-require": "warn",
    "class-methods-use-this": "off",
    "react/prop-types": "warn",
    "react/forbid-prop-types": "off",
    "react/require-default-props": "off",
    "react/jsx-closing-bracket-location": ["error", "after-props"]
  }
}
