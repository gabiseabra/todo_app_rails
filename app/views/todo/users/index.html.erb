<p id="notice"><%= notice %></p>

<h1>Todo Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_users.each do |todo_user| %>
      <tr>
        <td><%= todo_user.username %></td>
        <td><%= todo_user.email %></td>
        <td><%= todo_user.password %></td>
        <td><%= link_to 'Show', todo_user %></td>
        <td><%= link_to 'Edit', edit_todo_user_path(todo_user) %></td>
        <td><%= link_to 'Destroy', todo_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo User', new_todo_user_path %>
